# Simple, verifier-friendly implementations

@fn test_factorial() -> int:
    print("=== FACTORIAL ===")
    
    # Factorial of 5 = 120
    let n = 5
    let result = 1
    let i = 1
    
    while i <= n:
        result = result * i
        i = i + 1
    
    print(result)
    return result

@fn test_power() -> int:
    print("=== POWER ===")
    
    # 2^10 = 1024
    let base = 2
    let exp = 10
    let result = 1
    let i = 0
    
    while i < exp:
        result = result * base
        i = i + 1
    
    print(result)
    return result

@fn test_gcd() -> int:
    print("=== GCD ===")
    
    # GCD(48, 18) = 6
    let a = 48
    let b = 18
    
    while b != 0:
        let temp = b
        b = a % b
        a = temp
    
    print(a)
    return a

@fn test_sum() -> int:
    print("=== SUM ===")
    
    # Sum 1..10 = 55
    let sum = 0
    let i = 1
    
    while i <= 10:
        sum = sum + i
        i = i + 1
    
    print(sum)
    return sum

@fn run_math_tests() -> int:
    print("=== MATHEMATICAL TESTS ===")
    
    let r1 = test_factorial()
    let r2 = test_power()
    let r3 = test_gcd()
    let r4 = test_sum()
    
    print("=== ALL TESTS PASSED ===")
    
    return 0

mn:
