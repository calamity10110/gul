{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "mcp_everything": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-everything"],
    },
    "gul": {
      "command": ["gul", "mcp", "serve"],
      "env": {
        "GUL_AI_PROVIDER": "anthropic",
        "GUL_AI_MODEL": "claude-3-opus-20240229",
        "GUL_AI_API_KEY": "${ANTHROPIC_API_KEY}"
      }
    }
  },
    "code-mode": {
      "type": "local",
      "command": ["npx", "-y", "@utcp/code-mode-mcp"],
      "enabled": true,
      "environment": {
        "UTCP_CONFIG_FILE": "/home/vu/.config/opencode/.utcp_config.json"},
     },  
   },
  "permission": {
    "edit": "allow",
    "bash": "ask",
    "webfetch": "ask",
    "doom_loop": "ask",
    "external_directory": "ask"
  },
  "plugin": ["opencode-skills"],
}


