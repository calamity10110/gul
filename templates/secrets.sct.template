# GUL Secrets Template - v2.1
# File type: .sct (Secret Credential)
# 
# ⚠️ SECURITY WARNING:
# - This file is NEVER published to package registries
# - Add .sct to your .gitignore file
# - On `gul publish`, a stub file with redacted comments is created
#
# Environment Variable Fallback:
# If a secret is not found in .sct, the compiler will look for environment
# variables with the same name (uppercase, prefixed with GUL_)

# ===========================================
# API Keys
# ===========================================

# OpenAI API Key
OPENAI_API_KEY = "sk-..."

# Anthropic API Key  
ANTHROPIC_API_KEY = "sk-ant-..."

# Google Cloud API Key
GOOGLE_API_KEY = "AIza..."

# ===========================================
# Database Credentials
# ===========================================

# PostgreSQL
DB_HOST = "localhost"
DB_PORT = 5432
DB_NAME = "my_database"
DB_USER = "postgres"
DB_PASSWORD = "your_password_here"

# Connection String (alternative)
DATABASE_URL = "postgresql://user:pass@localhost:5432/db"

# ===========================================
# Authentication Tokens
# ===========================================

# JWT Secret for signing tokens
JWT_SECRET = "your-super-secret-jwt-key"
JWT_EXPIRY = "24h"

# OAuth Secrets
OAUTH_CLIENT_ID = "your-client-id"
OAUTH_CLIENT_SECRET = "your-client-secret"

# ===========================================
# Third-Party Services
# ===========================================

# Stripe
STRIPE_SECRET_KEY = "sk_live_..."
STRIPE_WEBHOOK_SECRET = "whsec_..."

# AWS
AWS_ACCESS_KEY_ID = "AKIA..."
AWS_SECRET_ACCESS_KEY = "..."
AWS_REGION = "us-east-1"

# SendGrid (Email)
SENDGRID_API_KEY = "SG...."

# Twilio (SMS)
TWILIO_ACCOUNT_SID = "AC..."
TWILIO_AUTH_TOKEN = "..."

# ===========================================
# Encryption Keys
# ===========================================

# AES-256 Encryption Key
ENCRYPTION_KEY = "base64-encoded-32-byte-key"

# HMAC Secret
HMAC_SECRET = "your-hmac-secret"

# ===========================================
# Environment-Specific Settings
# ===========================================

# Environment flag
ENVIRONMENT = "development"  # development | staging | production

# Debug mode (disable in production)
DEBUG_MODE = true
